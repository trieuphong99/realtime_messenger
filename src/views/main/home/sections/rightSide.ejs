<div class="col-sm-9 sidenav no-padding">
    <div class="tab-content" id="chat-screen">
        <% allConversations.forEach(function(conversation, index) { %>
            <% if(conversation.members) { %>
                <div class="right tab-pane <% if(index === 0) { %> active <% } %>" data-chat="<%= conversation._id %>" id="to_<%= conversation._id %>">
                    <div class="top">
                        <span>To: <span class="name"><%= conversation.name %></span></span>
                        <span class="chat-menu-right">
                            <a href="#attachsModal" id="show-attachs" data-toggle="modal">
                                Tệp đính kèm
                                <i class="fa fa-paperclip"></i>
                            </a>
                        </span>
                        <span class="chat-menu-right">
                            <a href="javascript:void(0)">&nbsp;</a>
                        </span>
                        <span class="chat-menu-right">
                            <a href="#imagesModal" id="show-images" data-toggle="modal">
                                Hình ảnh
                                <i class="fa fa-photo"></i>
                            </a>
                        </span>
                    </div>
                    <div class="content-chat">
                        <div class="chat" data-chat="">
                            <div class="bubble me" data-mess-id="${item._id}">Hello, I'm Trung Quan, author of https://trungquandev.com</div>
                            <div class="bubble you" data-mess-id="${item._id}">Really? I'm Trung Quan too, author of https://trungquandev.com, are you fake?</div>
                            <div class="bubble me" data-mess-id="${item._id}">This is me !!!</div>
                            <div class="bubble me bubble-image-file" data-mess-id="${item._id}">
                                <img src="images/users/default-avatar-trungquandev-01.jpg" class="show-image-chat">
                            </div>
                            <div class="bubble me bubble-image-file" data-mess-id="${item._id}">
                                    <a href="fileExample/Tệp văn bản - trungquandev.pdf" 
                                    download="${ item.file.fileName }">
                                        Tệp văn bản - trungquandev.pdf
                                    </a>
                                </div>
                            <div class="bubble you" data-mess-id="${item._id}">And this is me @@ !!!</div>

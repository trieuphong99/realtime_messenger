                                <input type="file" id="image-chat" name="my-image-chat" class="image-chat" data-chat="">
                                <i class="fa fa-photo"></i>
                            </label>
                            <label for="attach-chat">
                                <input type="file" id="attach-chat" name="my-attach-chat" class="attach-chat" data-chat="">
                                <i class="fa fa-paperclip"></i>
                            </label>
                            <a href="#streamModal" id="video-chat" class="video-chat" data-chat="" data-toggle="modal">
                                <i class="fa fa-video-camera"></i>
                            </a>
                            <input type="hidden" id="peer-id" value="">
                        </div>
                    </div>
                </div>
